    <div class="container">
        <div class="text-center mb-5">
        <h3>Ultimele resurse deschise adăugate</h3>
    </div>

    <div id="resurse" class="row gx-5 justify-content-center">
        <div class="resurse">

            {{!-- Randează resursele în landing --}}
            {{#each resurse}}
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <a class="" href="/resursepublice/{{this._id}}" class="">{{this.title}}</a>
                        </h5>
                        <h6 class="card-subtitle mb-2">{{this.autori}}</h6>
                        <span class="text-muted">{{this.dataRo}}</span>                                   
                    </div>

                    {{!-- Dacă există copertă, afișeaz-o --}}
                    {{#if this.coperta}}
                        <div style="position: relative;">
                            <img src="{{this.coperta}}" class="coperta card-img-top" alt="{{this.title}}">
                        </div>
                        {{else}}
                        <div style="position: relative;">
                            <img src="/{{logoimg}}" alt="logo" width="100px" style="position: absolute; top: 5; left: 5">
                            <img data-src="holder.js/100px100&textmode=exact?auto=yes&text={{this.title}}" class="card-img-top">
                        </div>
                    {{/if}}
                    
                    <div class="card-body">
                        <p class="card-text">{{this.description}}</p>
                        {{!-- <a href="/resursepublice/{{this.id}}" class="btn btn-primary">Afișează</a>    --}}
                    </div>

                    <div class="card-footer text-muted">
                        {{#each this.etichete}}
                            <a href="/tag/{{this}}">
                                <span class="badge badge-info">{{this}}</span>
                            </a>
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>

